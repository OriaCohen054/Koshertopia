<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/business_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="20dp">

    <!-- Header: לוגו -> שם עסק -> תפריט -->
    <ImageView
        android:id="@+id/business_logo"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ico_busines"
        android:background="@drawable/input_background"
        android:padding="6dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/business_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Business Name"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/business_logo"
        app:layout_constraintBottom_toBottomOf="@id/business_logo"
        app:layout_constraintStart_toEndOf="@id/business_logo"
        app:layout_constraintEnd_toStartOf="@id/btn_menu" />

    <ImageButton
        android:id="@+id/btn_menu"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/input_background"
        android:src="@drawable/ic_menu_24"
        android:tint="@color/white"
        android:contentDescription="@string/app_name"
        app:layout_constraintTop_toTopOf="@id/business_logo"
        app:layout_constraintBottom_toBottomOf="@id/business_logo"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="UseAppTint" />

    <!-- כאן ננפח את הכרטיס (view_restaurant_details_card.xml) בקוד -->
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/business_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
