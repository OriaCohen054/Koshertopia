<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_CARD"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Media header with badge -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/details_PAGER_media"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <!-- Pager indicator -->
            <TextView
                android:id="@+id/details_LBL_pagerIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logo 1/3"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="@drawable/bg_badge_dark"
                android:layout_gravity="bottom|end"
                android:layout_margin="10dp"/>

            <!-- Kosher green badge -->
            <TextView
                android:id="@+id/details_LBL_kosherBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kosher"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="@drawable/bg_badge_green"
                android:layout_gravity="top|end"
                android:layout_margin="12dp"/>
        </FrameLayout>

        <!-- Content scroll -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title & subtitle -->
                <TextView
                    android:id="@+id/details_LBL_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Restaurant title"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginTop="4dp"/>

                <!-- Opening Hours -->
                <TextView
                    android:id="@+id/details_LBL_hoursTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opening Hours"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:id="@+id/details_LYT_hours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp"/>

                <!-- Shabbat -->
                <TextView
                    android:id="@+id/details_LBL_shabbatTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shabbat"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:id="@+id/details_LYT_shabbat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp"/>

                <!-- Chips / tags row -->
                <LinearLayout
                    android:id="@+id/details_TAGS_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"/>

                <!-- Amenities list (✔/✖) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amenities"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginTop="16dp"/>

                <LinearLayout
                    android:id="@+id/details_LYT_flags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp"/>

                <!-- Notes (נשאיר נסתר עד שיהיו נתונים) -->
                <TextView
                    android:id="@+id/details_LBL_notesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:id="@+id/details_LBL_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Short description..."
                    android:textColor="#8A000000"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.cardview.widget.CardView>
