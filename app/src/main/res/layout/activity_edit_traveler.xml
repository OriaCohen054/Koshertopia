<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient"
        android:padding="24dp">

        <!-- Back -->
        <TextView
            android:id="@+id/edit_LBL_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="‹ Back"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground" />

        <!-- Title -->
        <TextView
            android:id="@+id/edit_LBL_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/edit_LBL_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <!-- Banner להשלמת פרטים (למשתמשי Google, אופציונלי) -->
        <TextView
            android:id="@+id/edit_LBL_complete_banner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Complete your profile to continue"
            android:textColor="#2C2C2C"
            android:background="@drawable/input_background"
            android:visibility="gone"
            android:fontFamily="@font/poppins_light"
            app:layout_constraintTop_toBottomOf="@id/edit_LBL_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <!-- אזור תמונה -->
        <LinearLayout
            android:id="@+id/edit_photo_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/edit_LBL_complete_banner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/edit_IMG_photo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ico_traveler"
                android:padding="6dp"
                android:background="@drawable/input_background"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/edit_LBL_change_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change photo"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_light"
                android:layout_marginTop="6dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"/>
        </LinearLayout>

        <!-- First & Last name (English) -->
        <LinearLayout
            android:id="@+id/edit_english_names"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/edit_photo_area"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:weightSum="2">

            <EditText
                android:id="@+id/edit_EDT_first_name_en"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:hint="First name (English)"
                android:background="@drawable/input_background"
                android:textColorHint="#F8EFFF"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_light"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:textSize="@dimen/text_box_text_size"/>

            <EditText
                android:id="@+id/edit_EDT_last_name_en"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:hint="Last name (English)"
                android:background="@drawable/input_background"
                android:textColorHint="#F8EFFF"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_light"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:textSize="@dimen/text_box_text_size"/>
        </LinearLayout>

        <!-- Email (read-only) -->
        <EditText
            android:id="@+id/edit_EDT_email"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/text_box_text_size"
            android:hint="Email"
            android:enabled="false"
            android:focusable="false"
            android:background="@drawable/input_background"
            android:textColorHint="#F8EFFF"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_light"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/edit_english_names"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Phone with country -->
        <LinearLayout
            android:id="@+id/edit_phone_input"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/edit_EDT_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:weightSum="2">

            <TextView
                android:id="@+id/edit_TXT_country_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@drawable/input_background"
                android:padding="12dp"
                android:text="Country code"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:drawablePadding="8dp"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/poppins_light" />

            <EditText
                android:id="@+id/edit_EDT_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:hint="Phone number"
                android:textSize="@dimen/text_box_text_size"
                android:background="@drawable/input_background"
                android:textColorHint="#F8EFFF"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_light"
                android:padding="12dp"
                android:maxLength="10"/>
        </LinearLayout>

        <!-- Gender -->
        <RadioGroup
            android:id="@+id/edit_RG_gender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/edit_phone_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton android:id="@+id/edit_RB_male"   android:text="@string/male"   android:textColor="#FFFFFF" android:layout_height="wrap_content" android:layout_width="wrap_content"  android:textSize="@dimen/text_box_text_size"/>
            <RadioButton android:id="@+id/edit_RB_female" android:text="@string/female" android:textColor="#FFFFFF" android:layout_height="wrap_content" android:layout_width="wrap_content"  android:layout_marginLeft="45dp" android:textSize="@dimen/text_box_text_size"/>
            <RadioButton android:id="@+id/edit_RB_other"  android:text="@string/other"  android:textColor="#FFFFFF" android:layout_height="wrap_content" android:layout_width="wrap_content"  android:layout_marginLeft="45dp" android:textSize="@dimen/text_box_text_size"/>
        </RadioGroup>

        <!-- Actions -->
        <LinearLayout
            android:id="@+id/edit_actions_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/edit_RG_gender"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/edit_BTN_cancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="#3B3B3B"
                android:background="@drawable/button_rounded_google"
                android:fontFamily="@font/poppins_medium"
                android:textSize="18sp"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp"/>

            <Button
                android:id="@+id/edit_BTN_save"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_rounded_purple"
                android:fontFamily="@font/poppins_medium"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/edit_actions_bar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
