<!--            app:layout_constraintTop_toBottomOf="@id/business_title"-->
<!--            app:layout_constraintBottom_toBottomOf="@id/business_logo" />-->
<!--    </androidx.constraintlayout.widget.ConstraintLayout>-->

    <!-- תוכן/כרטיס מרכזי -->
    <LinearLayout
        android:id="@+id/content_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/input_background"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/section_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Traveler View"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_medium" />

        <TextView
            android:id="@+id/complete_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Please complete your business details."
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>