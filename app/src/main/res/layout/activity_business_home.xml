<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/business_home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- רקע מדינה (או גרדיינט כברירת מחדל) -->
    <ImageView
        android:id="@+id/hero_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- שכבת כהות עדינה -->
    <View
        android:id="@+id/hero_scrim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#4D000000"
        app:layout_constraintTop_toTopOf="@id/hero_image"
        app:layout_constraintBottom_toBottomOf="@id/hero_image"
        app:layout_constraintStart_toStartOf="@id/hero_image"
        app:layout_constraintEnd_toEndOf="@id/hero_image" />

    <!-- Top bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- לוגו קודם -->
        <ImageView
            android:id="@+id/business_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ico_busines"
            android:background="@drawable/input_background"
            android:padding="6dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- כפתור תפריט – בלי אייקון, תו ⋮ -->
        <TextView
            android:id="@+id/btn_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="⋮"
            android:layout_marginTop="0dp"
            android:textSize="22sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- שם העסק ליד הלוגו -->
        <TextView
            android:id="@+id/business_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Business Name"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintStart_toEndOf="@id/business_logo"
            app:layout_constraintEnd_toStartOf="@id/btn_menu"
            app:layout_constraintTop_toTopOf="@id/business_logo"
            android:layout_marginStart="12dp" />

<!--        &lt;!&ndash; סטטוס מתחת לשם &ndash;&gt;-->
