<!-- ScrollView -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient"
        android:padding="24dp">

        <!-- Back button -->
        <TextView
            android:id="@+id/lBL_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€¹ Back"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"/>

        <!-- Logo -->
        <ImageView
            android:id="@+id/signup_IMG_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="-50dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo"
            app:layout_constraintTop_toBottomOf="@id/lBL_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/signup_LBL_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is your\n business?"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="34sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginTop="-40dp"
            app:layout_constraintTop_toBottomOf="@id/signup_IMG_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <GridLayout
            android:id="@+id/business_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:rowCount="4"
            app:layout_constraintTop_toBottomOf="@id/signup_LBL_title"
            android:gravity="center"
            android:padding="0dp"
            android:layout_marginTop="24dp"
            tools:ignore="MissingConstraints" >

            <LinearLayout
                android:id="@+id/tile_restaurants"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/button_business"
                android:padding="2dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/restaurant_icon"
                    android:contentDescription="Restaurant icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurants"
                    android:textColor="#1E1E1E"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="0dp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/tile_hotels"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/button_business"
                android:padding="2dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:clickable="false"
                android:focusable="true">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:src="@drawable/hotel_icon"
                    android:contentDescription="Restaurant icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Hotels &amp; \nGuesthoues"
                    android:textColor="#1E1E1E"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="0dp"/>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/tile_jewish_services"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/button_business"
                android:padding="2dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:clickable="false"
                android:focusable="true">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/jewish_services_icon"
                    android:contentDescription="Restaurant icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Jewish Services"
                    android:textColor="#1E1E1E"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="0dp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/tile_supermarkets"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/button_business"
                android:padding="2dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:clickable="false"
                android:focusable="true">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/supermarket_icon"
                    android:contentDescription="Restaurant icon"
                    android:layout_marginRight="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supermarkets"
                    android:textColor="#1E1E1E"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="-20dp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/tile_markets"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/button_business"
                android:padding="2dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:clickable="false"
                android:focusable="true">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/market_icon"
                    android:contentDescription="Restaurant icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\t\t\tMarkets"
                    android:textColor="#1E1E1E"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/tile_attractions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/button_business"
                android:padding="2dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:clickable="false"
                android:focusable="true">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/attractions_icon"
                    android:contentDescription="Restaurant icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attractions"
                    android:textColor="#1E1E1E"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="13dp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/tile_shabbat_hosts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/button_business"
                android:padding="2dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:clickable="false"
                android:focusable="true">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:src="@drawable/shabbat_hosts_icon"
                    android:contentDescription="Restaurant icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shabbat \n\tHosts"
                    android:textColor="#1E1E1E"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="27dp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/tile_chabad_houses"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/button_business"
                android:padding="2dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:clickable="false"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/chabad_houes_icon"
                    android:contentDescription="Restaurant icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chabad \n Houses"
                    android:textColor="#1E1E1E"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="30dp"/>
            </LinearLayout>
        </GridLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
