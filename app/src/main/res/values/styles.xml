<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomNumberPickerTheme" parent="android:Theme.Material.Light">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#CCCCCC</item>
        <item name="android:editTextBackground">@android:color/transparent</item>
    </style>

    <style name="TopRoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="AppTheme.Material" parent="Theme.Material3.DayNight.NoActionBar"/>

    <style name="ShapeTopRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="Theme.Koshertopia.RestaurantDetails" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorSurface">@color/kt_surface</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="android:colorBackground">@color/kt_background</item>
        <item name="colorOnBackground">@android:color/black</item>
    </style>

    <style name="Kt.Tag">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/bg_tag_pill</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <!-- סתם placeholder כדי לא לשבור build אם יש הפניה ל-@style/Kt -->
    <style name="Kt" />
</resources>